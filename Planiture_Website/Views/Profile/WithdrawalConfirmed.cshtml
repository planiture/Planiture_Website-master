
@{
    ViewData["Title"] = "Withdrawal Confirmed";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<body onload="successfully()">

</body>

<style>
    
    #success {
        background-color: white;
        border: 1px solid black;
        padding: 60px;
    }
    #success span{
        padding: 20px;
      background-color: #4CAF50;
      color: white;
      opacity: 1;
      transition: opacity 0.6s;
      margin-bottom: 15px;
    }
</style>

<script type="text/javascript">
    function successfully() {
        Swal.fire({
            icon: 'success',
            title: 'User Withdrawal Request was successfully sent!',
            text: "Please wait for the withdrawal request to be processed... which may take up to 48 hours",
            confirmButtonText:
                '<a href="https://localhost:44336/Profile">Login</a>',
        })
    }
</script>