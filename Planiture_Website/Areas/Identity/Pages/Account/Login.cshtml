    }

    #forgot-password {
        color: #D4AF37;
        font-size: 14px;
        padding: 6px 0px;
    }

    #forgot-password:hover{
        color: gold;
    }

    #submit {
        color: black;
        background-color: #D4AF37;
        border: 1px solid black;
        border-radius: 10px;
        padding: 10px 24px;
        width: 20%;
        font-weight: 500;
        font-size: 14px;
    }

    #submit:hover{
        background-color: gold;
    }
