        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Customer List</h3>

                        <div class="card-tools">
                            <form method="get" asp-page-handler="Search">
                                <div class="input-group input-group-sm" style="width: 150px;">
                                    <input type="text" name="SearchTerm" class="form-control float-right" placeholder="Search">

                                    <div class="input-group-append">
                                        <button type="submit" class="btn btn-default"><i class="fas fa-search"></i></button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body table-responsive p-0">
                        <table class="table table-hover text-nowrap">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Profile Image</th>
                                    <th>First Name</th>
                                    <th>Last Name</th>
                                    <th>Signature</th>
                                    <th>Username</th>
                                    <th>D.O.B.</th>
                                    <th>Gender</th>
                                    <th>Member Since</th>
                                    <th>Email</th>
                                    <th>Phone Number</th>
                                    <th>Address1</th>
                                    <th>Address2</th>
                                    <th>City</th>
                                    <th>State</th>
                                    <th>Residency</th>
                                    <th>Zip Code</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach(var user in Model.GetUser)
                                {
                                    <tr>
                                        <td>@user.Id</td>
                                        <td>
                                            @if (user.ProfileImage != "")
                                            {
                                                <img style="width:80px; height:50px; float:left; border-radius:50%; margin-right: 25px;" asp-append-version="true"
                                                     src="~/image/@user.ProfileImage" />
                                            }
                                            else
                                            {
                                                <img id="profileImage" title="Account Photo" src="~/image/default-profile-picture.png" asp-append-version="true"
                                                     style="width: 50px; height: 50px; float: left; border-radius: 50%; margin-right: 25px;" />
                                            }
                                        </td>
                                        <td>@user.FirstName</td>
                                        <td>@user.LastName</td>
                                        <td>@user.Signature</td>
                                        <td>@user.UserName</td>
                                        <td>@user.DOB</td>
                                        <td>@user.Gender</td>
                                        <td>@user.MemberSince</td>
                                        <td>@user.Email</td>
                                        <td>@user.PhoneNumber</td>
                                        <td>@user.Address1</td>
                                        <td>@user.Address2</td>
                                        <td>@user.City</td>
                                        <td>@user.State</td>
                                        <td>@user.Residency</td>
                                        <td>@user.ZipCode</td>
                                    </tr>
                                 }
                            </tbody>
                        </table>
                    </div>
                    <!-- /.card-body -->
                    <div class="card-footer">
                        <div class="card-tools">
