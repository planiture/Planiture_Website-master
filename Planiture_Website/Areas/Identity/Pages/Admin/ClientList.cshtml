                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th style="width: 10px">ID</th>
                                    <th>isProfile</th>
                                    <th>isAccount</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach(var user in Model.GetUser)
                                {
                                    <tr>
                                        <td>@user.Id</td>
                                        @if(user.isProfile == true)
                                        {
                                            <td><span class="badge bg-success">@user.isProfile</span></td>
                                        }
                                        else
                                        {
                                            <td><span class="badge bg-danger">@user.isProfile</span></td>
                                        }
                                        @if(user.isAccount == true)
                                        {
                                            <td><span class="badge bg-success">@user.isAccount</span></td>
                                        }
                                        else
                                        {
                                            <td><span class="badge bg-danger">@user.isAccount</span></td>
                                        }
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
