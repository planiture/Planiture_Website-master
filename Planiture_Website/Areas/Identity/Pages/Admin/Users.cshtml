@page
@model Planiture_Website.Areas.Identity.Pages.Admin.UsersModel
@{
}

<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark">Users</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-page="Index">Home</a></li>
                    <li class="breadcrumb-item active">Super Admin</li>
                    <li class="breadcrumb-item active">Users</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->

<section class="content">
    <div class="container-fluid">
        <h4>Manage Users</h4>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Email</th>
                    <th>Roles</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model.Users)
                {
                    <tr>
                        <td>@user.FirstName</td>
                        <td>@user.LastName</td>
                        <td>@user.Email</td>
                        <td>
                            @{
                                if (user.Roles.Contains("Super Admin"))
                                {
                                    <span class="badge badge-danger">SA</span>
                                }
                                else if (user.Roles.Contains("Admin"))
                                {
                                    <span class="badge badge-danger">ADMIN</span>
                                }
                                else if (user.Roles.Contains("Moderator"))
                                {
                                    <span class="badge badge-warning">MOD</span>
                                }
                                else if (user.Roles.Contains("Basic"))
                                {
                                    <span class="badge badge-success">BASIC</span>
                                }else if (user.Roles.Contains("Customer-Profile"))
                                {
                                    <span class="badge badge-success">Customer Profile</span>
                                }else if (user.Roles.Contains("Customer-Account"))
                                {
                                    <span class="badge badge-success">Customer Account</span>
                                }

                            }
                        </td>
                        <td>
                            <a class="btn btn-primary" asp-page="UserRoles" asp-route-userId="@user.UserId">Manage Roles</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</section>