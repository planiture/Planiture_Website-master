@page "{handler?}"
@model Planiture_Website.Areas.Identity.Pages.Admin.RolesModel
@{
    ViewData["Title"] = "Roles";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>User Roles</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">Manage</li>
                    <li class="breadcrumb-item active">UserRoles</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!--Main Content-->
<section class="content">
    <div class="container-fluid">
        <h4>Roles Manager</h4>
        <form method="post">
            <div class="input-group col-4" style="padding:0px;">
                <input autocomplete="off" name="roleName" type="text" class="form-control">
                <span class="input-group-append">
                    <button type="submit" class="btn btn-success">Add New Role</button>
                </span>
            </div>
        </form>
        <br />
        <table class="table table-striped">
            <thead>
                <tr>

                    <th>Id</th>
                    <th>Role</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var role in Model.Roles)
                {
                    <tr>
                        <td>@role.Id</td>
                        <td>@role.Name</td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</section>


